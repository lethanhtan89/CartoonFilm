<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/img_null"
        android:background="@color/colorBlack4"/>

    <TextView
        android:id="@+id/tv_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/mar5"
        android:background="@drawable/bg_average"
        android:paddingLeft="@dimen/mar20"
        android:paddingTop="@dimen/mar3"
        android:paddingRight="@dimen/mar20"
        android:paddingBottom="@dimen/mar3"
        android:visibility="gone"
        android:textColor="@color/colorWhite1" />

</RelativeLayout>
